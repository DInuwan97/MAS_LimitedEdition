@using MAS_Sustainability.Models;
@model MainModel
@{
    ViewBag.Title = "DepartmentLeadersInfoReportPreview";

}
<div class="content" id="panelDiv">
    <div class="page-inner">
        <div class="row justify-content-center">


            <div class="col-12 col-lg-10 col-xl-9">
                <div class="row align-items-center">
                    <div class="col">

                        <h4 class="page-title">Preview - List of Department Leaders</h4>
                    </div>
                    <div class="col-auto">

                        <a href="#" onclick="HTMLtoPDF()" class="btn btn-primary ml-2">
                            Download
                        </a>
                    </div>
                </div>
                <div class="page-divider"></div>

                <div class="row" id="HTMLtoPDF">
                    <div class="col-md-12">
                        <div class="card card-invoice">
                            <div class="card-header">

                                <h3 class="invoice-title">
                                    <img src="~/Content/images/MAS_logo.png" alt="" style="width:150px; height:35px">
                                </h3>

                                <div class="row">
                                    Industrial Maintainability & Safety Controlling System
                                </div>


                            </div>
                            <div class="card-body">
                                <div class="separator-solid"></div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="invoice-detail">
                                            <div class="invoice-top">
                                                <h3 class="title"><strong>List of Department Leaders</strong></h3>
                                            </div>
                                            <div class="invoice-item">
                                                <div class="table-responsive">
                                                    <table class="table table-striped">
                                                        <thead>
                                                            <tr>
                                                                <td class=""><strong>Name</strong></td>
                                                                <td class=""><strong>Department</strong></td>
                                                                <td class="text-right"><strong>Email</strong></td>
                                                                <td class=""><strong>Mobile</strong></td>
                                                            </tr>
                                                        </thead>
                                                        <tbody>

                                                            @foreach (var userDetailList in Model.ListUserRegistration)
                                                            {
                                                                if (@userDetailList.UserType == ("Department Leader"))
                                                                {



                                                                    <tr>
                                                                        <td class="">@userDetailList.UserFullName</td>
                                                                        <td class="">@userDetailList.UserDepartment</td>
                                                                        <td class="text-right">@userDetailList.UserEmail</td>
                                                                        <td class="">@userDetailList.UserMobile</td>
                                                                    </tr>
                                                                }

                                                            }


                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="separator-solid  mb-3"></div>
                                    </div>
                                </div>



                            </div>
                            <div class="card-footer">

                                <div class="separator-solid"></div>
                                <h6 class="text-uppercase mt-4 mb-3 fw-bold">
                                    Developped by THIRTYFIRST LANKA
                                </h6>

                            </div>
                        </div>
                    </div>
                </div>




            </div>


        </div>
    </div>
</div>

